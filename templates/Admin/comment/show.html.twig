{% trans_default_domain "OurTripsTrans" %}
{% extends 'base.html.twig' %}
{% block title %}Comment{% endblock %}

{% block body %}
    <h1>Comment</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ comment.id }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ comment.content }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ comment.createdAt ? comment.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Enabled</th>
                <td>{{ comment.enabled ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Level</th>
                <td>{{ comment.level }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('admin_comment_index') }}"><button class="warning"><img src="{{ asset('images/return.png') }}" alt="" width="20"></button></a>

    <a href="{{ path('admin_comment_edit', {'id': comment.id}) }}"><button class="warning"><i class="fas fa-edit"></i></button></a></a>

    {{ include('Admin/comment/_delete_form.html.twig') }}
{% endblock %}
