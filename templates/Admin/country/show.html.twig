{% trans_default_domain "OurTripsTrans" %}
{% extends 'base.html.twig' %}

{% block title %}Country{% endblock %}

{% block body %}
    <h1>Country</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ country.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ country.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ country.description }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('admin_country_index') }}"><button class="warning"><img src="{{ asset('images/return.png') }}" alt="" width="20"></button></a>

    <a href="{{ path('admin_country_edit', {'id': country.id}) }}"><button class="warning"><i class="fas fa-edit"></i></button></a></a>

    {{ include('Admin/country/_delete_form.html.twig') }}
{% endblock %}
