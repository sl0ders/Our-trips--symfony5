{% trans_default_domain "OurTripsTrans" %}
{% extends 'base.html.twig' %}

{% block title %}News{% endblock %}

{% block body %}
    <h1>News</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ news.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ news.title }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ news.content }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ news.createdAt ? news.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Archived_at</th>
                <td>{{ news.archivedAt ? news.archivedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Archived</th>
                <td>{{ news.archived ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('admin_news_index') }}"><button class="warning"><img src="{{ asset('images/return.png') }}" alt="" width="20"></button></a>

    <a href="{{ path('admin_news_edit', {'id': news.id}) }}"><button class="warning"><i class="fas fa-edit"></i></button></a></a>

    {{ include('Admin/news/_delete_form.html.twig') }}
{% endblock %}
