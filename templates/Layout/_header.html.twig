{% trans_default_domain "OurTripsTrans" %}
<nav id="nav">
    <div class="navbar">
        <div class="menu">
            <a class="logoHome nav-items" href="{{ path('home') }}">
                <img src="{{ asset('images/home.png') }}" alt="homePage" width="40">
            </a>
            <a href="{{ path('public_picture_index') }}" class="nav-items">
                <button>{{ "header.menu.allPictures"|trans }}</button>
            </a>
        </div>
        <div class="log">
            {% if not app.user %}
                <a href="{{ path('app_login') }}">
                    <button class="nav-items">{{ "header.log.login"|trans }}</button>
                </a>
                <a href="{{ path('app_register') }}" class="nav-items">
                    <button class="nav-items">{{ "header.log.register"|trans }}</button>
                </a>
            {% else %}
                <a href="{{ path('app_show', {"id": app.user.id}) }}" class="nav-items">
                    <button>{{ "header.log.profile"|trans }}</button>
                </a>
                {% if is_granted("ROLE_ADMIN") %}
                    <a href="{{ path('admin_settings_index') }}" class="nav-items">
                        <button>{{ "header.log.admin"|trans }}</button>
                    </a>
                {% endif %}
                <a href="{{ path('app_logout') }}">
                    <button class="nav-items logout">{{ "header.log.logout"|trans }}</button>
                </a>
            {% endif %}
        </div>
        <h1 class="title">{{ "header.title"|trans }}</h1>
    </div>
</nav>

